<Window x:Class="ProjectVersion2.Views.GuestDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectVersion2.Views" 
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
        mc:Ignorable="d"
        Title="GuestDashboard" Height="450" Width="800" Closing="Window_Closing" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Header Row -->
            <RowDefinition Height="*" />
            <!-- Content Row -->
            <RowDefinition Height="Auto" />
            <!-- Footer Row -->
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <!-- Heading Column -->
                <ColumnDefinition Width="Auto" />
                <!-- Button Column -->
            </Grid.ColumnDefinitions>

            <TextBlock Text="Pending Expenses" 
                       FontWeight="Bold" 
                       FontSize="18" 
                       Foreground="#555555" 
                       VerticalAlignment="Center" />

            <Button Content="Logout" 
                    Grid.Column="1" 
                    Width="100" 
                    Height="30" 
                    Background="#D9534F" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    VerticalAlignment="Center" 
                    Click="Logout_Click" />
        </Grid>

        <!-- Main Content Section -->
        <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Background="White" Padding="10">
            <StackPanel>
                <dxg:GridControl x:Name="PendingExpensesGridControl" 
                                 AutoGenerateColumns="AddNew" 
                                 ItemsSource="{Binding PendingExpensesList}" 
                                 Margin="0"
                                 MaxHeight="1000"
                                 Height="300"
                                 Loaded="PendingExpensesGridControl_Loaded">
                    <dxg:GridControl.Resources>
                        <!-- Header Style -->
                        <Style TargetType="dxg:GridColumnHeader">
                            <Setter Property="Background" Value="#005B96" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="Padding" Value="12,6" />
                        </Style>
                        <!-- Row Hover Effect -->
                        <Style TargetType="dxg:GridRow">
                            <Setter Property="Background" Value="White" />
                            <Setter Property="Foreground" Value="#333333" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E8F4FC" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </dxg:GridControl.Resources>

                    <dxg:GridControl.View>
                        <dxg:TableView ShowGroupPanel="False"  />
                    </dxg:GridControl.View>
                </dxg:GridControl>
            </StackPanel>
        </Border>

        <!-- Footer Section -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Pay Expense" Width="140" Height="35" Margin="5" Background="#007ACC" Foreground="White" FontWeight="Bold" Click="PayExpense_Click" />
        </StackPanel>
    </Grid>
</Window>
