<Window x:Class="ProjectVersion2.Views.ExpenseList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Expense List" Height="500" Width="900" WindowStartupLocation="CenterScreen" Background="#F9F9F9">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Expense List" Grid.Row="0" Grid.Column="0" 
                   FontSize="24" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,20" />

        <!-- DataGrid -->
        <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Background="White" Padding="10">
            <DataGrid x:Name="ExpenseDataGrid" 
                      AutoGenerateColumns="False" 
                      CanUserAddRows="False" 
                      IsReadOnly="True" 
                      ItemsSource="{Binding ExpensesList, Mode=TwoWay}" 
                      Margin="0" 
                      GridLinesVisibility="Horizontal" 
                      AlternatingRowBackground="#F5F5F5" 
                      RowBackground="White" 
                      BorderThickness="0" 
                      HeadersVisibility="Column">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*" />
                    <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat=C}" Width="Auto" />
                    <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="Auto" />
                    <DataGridTextColumn Header="Payment Method" Binding="{Binding PMethod}" Width="Auto" />
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="Auto" />
                    <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=dd-MM-yyyy}" Width="Auto" />
                    <DataGridTextColumn Header="Recurring" Binding="{Binding IsRecurring}" Width="Auto" />
                </DataGrid.Columns>
                
            </DataGrid>
        </Border>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Add Expense" 
                    Width="120" 
                    Margin="5" 
                    Padding="10,5" 
                    Background="#007ACC" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    Click="AddExpense_Click" />
            <Button Content="Close" 
                    Width="120" 
                    Margin="5" 
                    Padding="10,5" 
                    Background="#D9534F" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    Click="Close_Click" />
        </StackPanel>
    </Grid>
</Window>

