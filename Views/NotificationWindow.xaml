<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectVersion2.Views" xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
        xmlns:ViewModels="clr-namespace:ProjectVersion2.ViewModels" x:Class="ProjectVersion2.Views.NotificationWindow"
        mc:Ignorable="d"
        Title="NotificationWindow" Height="450" Width="800" SizeToContent="Height" WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <Grid>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="Your Notifications" 
           FontSize="24" FontWeight="Bold" Foreground="#333333" 
           HorizontalAlignment="Center" Margin="0,0,0,20" />

            <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Height="450" Background="White" Padding="10">
                <dxg:GridControl AutoGenerateColumns="AddNew" EnableSmartColumnsGeneration="True" ItemsSource="{Binding NotificationList}" Loaded="GridControl_Loaded" >
                    <dxg:GridControl.Resources>
                        <Style TargetType="dxg:GridColumnHeader">
                            <Setter Property="Background" Value="#007ACC"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </dxg:GridControl.Resources>
                    <dxg:GridControl.View>
                        <dxg:TableView AllowHeaderNavigation="True" TotalSummaryPosition="Bottom"/>
                    </dxg:GridControl.View>
                </dxg:GridControl>
            </Border>


        </Grid>
    </Grid>
</Window>
