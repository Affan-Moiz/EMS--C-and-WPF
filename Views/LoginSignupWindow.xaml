<Window x:Class="ProjectVersion2.Views.LoginSignupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectVersion2.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" Background="#F9F9F9" SizeToContent="Height" Width="400">
    <Grid Margin="20">

        <!-- Login Grid -->
        <Grid x:Name="LoginGrid" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Login" FontSize="28" FontWeight="Bold" 
                       Foreground="#333333" HorizontalAlignment="Center" Margin="0,0,0,20" />

            <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="1" 
                    CornerRadius="8" Background="White" Padding="20">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <Label Content="Username:" FontWeight="Bold" Foreground="#555555" />
                    <TextBox x:Name="LoginUsernameTextBox" Width="300" Height="25" Margin="0,5,0,15" VerticalAlignment="Bottom" />
                    <Label Content="Password:" FontWeight="Bold" Foreground="#555555" />
                    <PasswordBox x:Name="LoginPasswordBox" Width="300" Height="25" Margin="0,5,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Login" Width="120" Height="35" Margin="5" 
                        Background="#007ACC" Foreground="White" FontWeight="Bold" Click="Login_Click"/>
                <Button Content="Sign Up" Width="120" Height="35" Margin="5" 
                        Background="#D9534F" Foreground="White" FontWeight="Bold" Click="ShowSignUp_Click"/>
            </StackPanel>
        </Grid>

        <!-- Sign Up Grid -->
        <Grid x:Name="SignupGrid" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Sign Up" FontSize="28" FontWeight="Bold" 
                       Foreground="#333333" HorizontalAlignment="Center" Margin="0,0,0,20" />

            <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="1" 
                    CornerRadius="8" Background="White" Padding="20">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <Label Content="Username:" FontWeight="Bold" Foreground="#555555" />
                    <TextBox x:Name="SignupUsernameTextBox" Width="300" Height="25" Margin="0,5,0,15" />
                    <Label Content="Email:" FontWeight="Bold" Foreground="#555555" />
                    <TextBox x:Name="SignupEmailTextBox" Width="300" Height="25" Margin="0,5,0,15" />
                    <Label Content="Password:" FontWeight="Bold" Foreground="#555555" />
                    <PasswordBox x:Name="SignupPasswordBox" Width="300" Height="25" Margin="0,5,0,15" />
                    <Label Content="Role:" FontWeight="Bold" Foreground="#555555" />
                    <ComboBox x:Name="SignupRoleComboBox" Width="300" Height="30" Margin="0,5,0,0">
                        <ComboBoxItem Content="User" />
                        <ComboBoxItem Content="Admin" />
                        <ComboBoxItem Content="Guest" />
                    </ComboBox>
                </StackPanel>
            </Border>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Sign Up" Width="120" Height="35" Margin="5" 
                        Background="#007ACC" Foreground="White" FontWeight="Bold" Click="Signup_Click"/>
                <Button Content="Back to Login" Width="120" Height="35" Margin="5" 
                        Background="#D9534F" Foreground="White" FontWeight="Bold" Click="ShowLogin_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>