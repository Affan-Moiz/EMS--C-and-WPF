<Window x:Class="ProjectVersion2.Views.AddEditCategoryScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectVersion2.Views"
        mc:Ignorable="d"
        Title="AddEditCategoryScreen" Width="500" SizeToContent="Height" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="Add/Edit User" 
               FontSize="24" FontWeight="Bold" Foreground="#333333" 
               HorizontalAlignment="Center" Margin="0,0,0,20" />

            <!-- Form -->
            <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Background="White" Padding="20">
                <StackPanel>
                    <!-- Username -->
                    <TextBlock Text="Category Name" FontSize="16" FontWeight="Bold" Foreground="#555555" Margin="0,0,0,5" />
                    <TextBox x:Name="CategoryTextBox" FontSize="14" Padding="8" BorderBrush="#CCCCCC" BorderThickness="1" />

                    
                </StackPanel>
            </Border>

            <!-- Footer Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Save" 
                Width="120" Margin="5" Padding="10,5" 
                Background="#007ACC" Foreground="White" FontWeight="Bold" 
                Click="SaveButton_Click" />
                <Button Content="Cancel" 
                Width="120" Margin="5" Padding="10,5" 
                Background="#D9534F" Foreground="White" FontWeight="Bold" 
                Click="CancelButton_Click" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
