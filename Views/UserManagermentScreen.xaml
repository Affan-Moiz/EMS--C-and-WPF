<Window x:Class="ProjectVersion2.Views.UserManagementScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="User Management" Height="500" Width="900" WindowStartupLocation="CenterScreen" Background="#F9F9F9">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="User Management" 
                   FontSize="28" FontWeight="Bold" Foreground="#333333" 
                   HorizontalAlignment="Center" Margin="0,0,0,20" />

        <!-- Users List -->
        <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Background="White" Padding="10">
            <ListBox x:Name="UsersListBox" 
                     Background="#F5F5F5" 
                     BorderBrush="#CCCCCC" 
                     BorderThickness="1" 
                     Margin="0" />
        </Border>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Add User" 
                    Width="120" Height="35" 
                    Margin="5" Padding="10,5" 
                    Background="#007ACC" Foreground="White" 
                    FontWeight="Bold" Click="AddUser_Click" />
            <Button Content="Edit User" 
                    Width="120" Height="35" 
                    Margin="5" Padding="10,5" 
                    Background="#5CB85C" Foreground="White" 
                    FontWeight="Bold" Click="EditUser_Click" />
            <Button Content="Remove User" 
                    Width="120" Height="35" 
                    Margin="5" Padding="10,5" 
                    Background="#D9534F" Foreground="White" 
                    FontWeight="Bold" Click="RemoveUser_Click" />
            <Button Content="Approve User" 
                    Width="120" Height="35" 
                    Margin="5" Padding="10,5" 
                    Background="#007ACC" Foreground="White" 
                    FontWeight="Bold" Click="ApproveUser_Click" />
            <Button Content="Reject User" 
                    Width="120" Height="35" 
                    Margin="5" Padding="10,5" 
                    Background="#D9534F" Foreground="White" 
                    FontWeight="Bold" Click="RejectUser_Click" />
        </StackPanel>
    </Grid>
</Window>

