<Window x:Class="ProjectVersion2.Views.ManagerDashboardScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" xmlns:ViewModels="clr-namespace:ProjectVersion2.ViewModels"
        mc:Ignorable="d"
        Title="Manager Dashboard" Height="610" Width="500" WindowStartupLocation="CenterScreen" Background="#F9F9F9" Closing="Window_Closing" SizeToContent="Width"  >
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="231*"/>
                <ColumnDefinition Width="149*"/>
                <ColumnDefinition Width="Auto"/>

            </Grid.ColumnDefinitions>
            <TextBlock DataContext="{Binding ActiveUser}" 
                       FontSize="28" FontWeight="Bold" Foreground="#333333" 
                       HorizontalAlignment="Left" VerticalAlignment="Top" >
                <Run Text="Welcome," />
                <Run Text="{Binding Username}" />
            </TextBlock>
            <Button Content="Logout" 
                    Width="100" Height="30" 
                    HorizontalAlignment="Right" VerticalAlignment="Center" 
                    Background="#D9534F" Foreground="White" FontWeight="Bold" 
                    Click="Logout_Click" Grid.Row="1" Grid.Column="2" Margin="0,0,0,0" />
        </Grid>

        <!-- TabControl -->
        <TabControl Grid.Row="1" Margin="0,20,0,0" SelectionChanged="TabControl_SelectionChanged">
            <!-- Pending User Approvals Tab -->
            <TabItem Header="Pending User Approvals">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Background="White" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Pending User Approvals" FontWeight="Bold" FontSize="18" Foreground="#555555" Margin="0,0,0,10" />
                            <dxg:GridControl x:Name="PendingUserApprovalsGridControl" 
                                             AutoGenerateColumns="AddNew" 
                                             Loaded="PendingUserApprovalsGridControl_Loaded"
                                             ItemsSource="{Binding PendingUserList}" 
                                             Margin="0"
                                             MaxHeight="1000"
                                             Height="300">
                                <dxg:GridControl.Resources>
                                    <!-- Header Style -->
                                    <Style TargetType="dxg:GridColumnHeader">
                                        <Setter Property="Background" Value="#005B96" />
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="FontWeight" Value="Bold" />
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                        <Setter Property="Padding" Value="12,6" />
                                        <Setter Property="Width" Value="Auto"/>
                                    </Style>
                                    <!-- Row Hover Effect -->
                                    <Style TargetType="dxg:GridRow">
                                        <Setter Property="Background" Value="White" />
                                        <Setter Property="Foreground" Value="#333333" />
                                        <Setter Property="Width" Value="Auto"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E8F4FC" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </dxg:GridControl.Resources>

                                <dxg:GridControl.View>
                                    <dxg:TableView ShowGroupPanel="False"/>
                                </dxg:GridControl.View>
                            </dxg:GridControl>

                        </StackPanel>
                    </Border>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                        <Button Content="Approve User" Width="140" Height="35" Margin="5" Background="#007ACC" Foreground="White" FontWeight="Bold" Click="ApproveUser_Click" />
                        <Button Content="Export Data" Width="140" Height="35" Margin="5" Background="BlueViolet" Foreground="White" FontWeight="Bold" Click="ExportPendingUserData_Click" />
                        <Button Content="Reject User" Width="140" Height="35" Margin="5" Background="#9B111E" Foreground="White" FontWeight="Bold" Click="RejectUser_Click" />
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Pending Expense Approvals Tab -->
            <TabItem Header="Pending Expense Approvals" >
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Background="White" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Pending Expense Approvals" FontWeight="Bold" FontSize="18" Foreground="#555555" Margin="0,0,0,10" />
                            <dxg:GridControl x:Name="PendingExpensesApprovalsGridControl" 
                             AutoGenerateColumns="AddNew" 
                            ItemsSource="{Binding PendingExpensesList}" 
                            Margin="0"
                            MaxHeight="1000"
                            Height="300"
                            Loaded="PendingExpensesApprovalsGridControl_Loaded">
                                <dxg:GridControl.Resources>
                                    <!-- Header Style -->
                                    <Style TargetType="dxg:GridColumnHeader">
                                        <Setter Property="Background" Value="#005B96" />
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="FontWeight" Value="Bold" />
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                        <Setter Property="Padding" Value="12,6" />
                                    </Style>
                                    <!-- Row Hover Effect -->
                                    <Style TargetType="dxg:GridRow">
                                        <Setter Property="Background" Value="White" />
                                        <Setter Property="Foreground" Value="#333333" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E8F4FC" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </dxg:GridControl.Resources>

                                <dxg:GridControl.View>
                                    <dxg:TableView ShowGroupPanel="False"  />
                                </dxg:GridControl.View>
                            </dxg:GridControl>
                        </StackPanel>
                    </Border>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                        <Button Content="Approve Expense" Width="140" Height="35" Margin="5" Background="#007ACC" Foreground="White" FontWeight="Bold" Click="ApproveExpense_Click" />
                        <Button Content="Export Data" Width="140" Height="35" Margin="5" Background="BlueViolet" Foreground="White" FontWeight="Bold" Click="ExportPendingExpensesData_Click" />
                        <Button Content="Reject Expense" Width="140" Height="35" Margin="5" Background="#9B111E" Foreground="White" FontWeight="Bold" Click="RejectExpense_Click" />
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- User Management Tab -->
            <TabItem Header="User Management">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Background="White" Padding="10">
                        <StackPanel >
                            <TextBlock Text="User Management" FontWeight="Bold" FontSize="18" Foreground="#555555" Margin="0,0,0,10" />
                            <dxg:GridControl x:Name="UsersGridControl" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                            AutoGenerateColumns="AddNew" 
                            ItemsSource="{Binding UsersList}" 
                            Margin="0"
                            MaxHeight="1000"
                            Height="300"
                            Loaded="UsersGridControl_Loaded"
                                             >
                                <dxg:GridControl.Resources>
                                    <!-- Header Style -->
                                    <Style TargetType="dxg:GridColumnHeader">
                                        <Setter Property="Background" Value="#005B96" />
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="FontWeight" Value="Bold" />
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                        <Setter Property="Padding" Value="12,6" />
                                    </Style>
                                    <!-- Row Hover Effect -->
                                    <Style TargetType="dxg:GridRow">
                                        <Setter Property="Background" Value="White" />
                                        <Setter Property="Foreground" Value="#333333" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E8F4FC" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </dxg:GridControl.Resources>

                                <dxg:GridControl.View>
                                    <dxg:TableView ShowGroupPanel="False" CellValueChanged="TableView_CellValueChanged" />
                                </dxg:GridControl.View>
                            </dxg:GridControl>
                        </StackPanel>
                    </Border>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                        <Button Content="Add User" Width="140" Height="35" Margin="5" Background="#007ACC" Foreground="White" FontWeight="Bold" Click="AddUser_Click" />
                        <Button Content="Export Data" Width="140" Height="35" Margin="5" Background="BlueViolet" Foreground="White" FontWeight="Bold" Click="ExportUserData_Click" />
                        <Button Content="Remove User" Width="140" Height="35" Margin="5" Background="#9B111E" Foreground="White" FontWeight="Bold" Click="RemoveUser_Click" />
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Expense Management">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Background="White" Padding="10">
                        <StackPanel >
                            <TextBlock Text="Expense Management" FontWeight="Bold" FontSize="18" Foreground="#555555" Margin="0,0,0,10" />
                            <dxg:GridControl x:Name="ExpensesGridControl" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                             AutoGenerateColumns="AddNew" 
                                             ItemsSource="{Binding ExpensesList}" 
                                             Margin="0"
                                             MaxHeight="1000"
                                             Height="300"
                                             Loaded="ExpenseTableView_Loaded"
                                              >
                                <dxg:GridControl.Resources>
                                    <!-- Header Style -->
                                    <Style TargetType="dxg:GridColumnHeader">
                                        <Setter Property="Background" Value="#005B96" />
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="FontWeight" Value="Bold" />
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                        <Setter Property="Padding" Value="12,6" />
                                    </Style>
                                    <!-- Row Hover Effect -->
                                    <Style TargetType="dxg:GridRow">
                                        <Setter Property="Background" Value="White" />
                                        <Setter Property="Foreground" Value="#333333" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E8F4FC" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </dxg:GridControl.Resources>

                                <dxg:GridControl.View>
                                    <dxg:TableView ShowGroupPanel="False" CellValueChanged="ExpenseTableView_CellValueChanged"/>
                                </dxg:GridControl.View>
                            </dxg:GridControl>
                        </StackPanel>
                    </Border>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                        <Button Content="Add Expense" Width="140" Height="35" Margin="5" Background="#007ACC" Foreground="White" FontWeight="Bold" Click="AddExpense_Click" />
                        <Button Content="Export Data" Width="140" Height="35" Margin="5" Background="BlueViolet" Foreground="White" FontWeight="Bold" Click="ExportExpensesData_Click" />
                        <Button Content="Remove Expense" Width="140" Height="35" Margin="5" Background="#9B111E" Foreground="White" FontWeight="Bold" Click="RemoveExpense_Click" />
                    </StackPanel>
                </Grid>
            </TabItem>


            <TabItem Header="Salary Management">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Background="White" Padding="10">
                        <StackPanel >
                            <TextBlock Text="Expense Management" FontWeight="Bold" FontSize="18" Foreground="#555555" Margin="0,0,0,10" />
                            <dxg:GridControl x:Name="SalariesGridControl" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                 AutoGenerateColumns="AddNew" 
                                 ItemsSource="{Binding SalariesList}" 
                                 Margin="0"
                                 MaxHeight="1000"
                                 Height="300"
                                 Loaded="SalaryTableView_Loaded">
                                <dxg:GridControl.Resources>
                                    <!-- Header Style -->
                                    <Style TargetType="dxg:GridColumnHeader">
                                        <Setter Property="Background" Value="#005B96" />
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="FontWeight" Value="Bold" />
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                        <Setter Property="Padding" Value="12,6" />
                                    </Style>
                                    <!-- Row Hover Effect -->
                                    <Style TargetType="dxg:GridRow">
                                        <Setter Property="Background" Value="White" />
                                        <Setter Property="Foreground" Value="#333333" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E8F4FC" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </dxg:GridControl.Resources>

                                <dxg:GridControl.View>
                                    <dxg:TableView ShowGroupPanel="False" />
                                </dxg:GridControl.View>
                            </dxg:GridControl>
                        </StackPanel>
                    </Border>
                    <Button Grid.Row="1" Content="Export Data" Width="140" Height="35" Margin="10" Background="BlueViolet" Foreground="White" FontWeight="Bold" HorizontalAlignment="Right" Click="ExportSalaryData_Click" />

                </Grid>
            </TabItem>

            <TabItem Header="Categories Management">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Background="White" Padding="10">
                        <StackPanel >
                            <TextBlock Text="Expense Management" FontWeight="Bold" FontSize="18" Foreground="#555555" Margin="0,0,0,10" />
                            <dxg:GridControl x:Name="ExpensesCategoriesGridControl" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                     AutoGenerateColumns="AddNew" 
                                     ItemsSource="{Binding Categories}" 
                                     Margin="0"
                                     MaxHeight="1000"
                                     Height="300"
                                     >
                                <dxg:GridControl.Resources>
                                    <!-- Header Style -->
                                    <Style TargetType="dxg:GridColumnHeader">
                                        <Setter Property="Background" Value="#005B96" />
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="FontWeight" Value="Bold" />
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                        <Setter Property="Padding" Value="12,6" />
                                    </Style>
                                    <!-- Row Hover Effect -->
                                    <Style TargetType="dxg:GridRow">
                                        <Setter Property="Background" Value="White" />
                                        <Setter Property="Foreground" Value="#333333" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E8F4FC" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </dxg:GridControl.Resources>

                                <dxg:GridControl.View>
                                    <dxg:TableView ShowGroupPanel="False" CellValueChanged="CategoriesCellValueChanged" />
                                </dxg:GridControl.View>
                            </dxg:GridControl>
                        </StackPanel>
                    </Border>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                        <Button Content="Add Category" Width="140" Height="35" Margin="5" Background="#007ACC" Foreground="White" FontWeight="Bold" Click="AddCategoryButton_Click" />
                        <Button Content="Edit Category" Width="140" Height="35" Margin="5" Background="BlueViolet" Foreground="White" FontWeight="Bold" Click="EditCategoryButton_Click" />
                        <Button Content="Remove Category" Width="140" Height="35" Margin="5" Background="#9B111E" Foreground="White" FontWeight="Bold" Click="RemoveCategoryButton_Click" />
                    </StackPanel>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>