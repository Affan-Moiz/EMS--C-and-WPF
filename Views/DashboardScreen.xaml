<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" 
        xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts"
        xmlns:ViewModels="clr-namespace:ProjectVersion2.ViewModels" x:Class="ProjectVersion2.Views.DashboardScreen"
        mc:Ignorable="d"
        Title="Dashboard" Height="900" Width="980" WindowStartupLocation="CenterScreen" Background="#F9F9F9"
        Closing="Window_Closing"
        Loaded="Window_Loaded"
    GotFocus="Window_GotFocus">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" DataContext="{Binding ActiveUser}">
            <TextBlock
                       FontSize="24" FontWeight="Bold" Foreground="#333333" 
                       HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,20">
                <Run Text="Welcome," />
                <Run Text="{Binding Username}" FontWeight="Bold" />
            </TextBlock>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button x:Name="NotificationButton" Content="Notifications" 
                    Width="100" Height="30" 
                    HorizontalAlignment="Right" VerticalAlignment="Center" 
                    Background="#007ACC" Foreground="White" FontWeight="Bold" 
                    Click="NotificationButton_Click" Margin="10" />
                <Button Content="Settings" 
                    Width="100" Height="30" 
                    HorizontalAlignment="Right" VerticalAlignment="Center" 
                    Background="BlueViolet" Foreground="White" FontWeight="Bold" 
                    Click="SettingsButton_Click" />
                <Button Content="Logout" 
                    Width="100" Height="30" 
                    HorizontalAlignment="Right" VerticalAlignment="Center" 
                    Background="#D9534F" Foreground="White" FontWeight="Bold" 
                    Click="Logout_Click" Margin="10" />
            </StackPanel>
                
        </Grid>

        <!-- TabControl -->
        <TabControl Grid.Row="1" Margin="0,20,0,0">
            
            <!-- Dashboard Tab -->
            <TabItem Header="Dashboard">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Total Expenses -->
                        <Border Grid.Row="0" Margin="10" Padding="15" Background="White" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Total Expenses" FontSize="16" FontWeight="Bold" Foreground="#555555" />
                                <TextBlock x:Name="TotalExpensesTextBlock" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="#007ACC" 
                               Margin="0,5,0,0" 
                               Text="{Binding TotalExpenses, StringFormat=$ \{0:N2\}}"  />
                            </StackPanel>
                        </Border>

                        <!-- Remaining Budget -->
                        <Border Grid.Row="1" Margin="10" Padding="15" Background="White" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Remaining Budget" FontSize="16" FontWeight="Bold" Foreground="#555555" />
                                <TextBlock x:Name="RemainingBudgetTextBlock" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="#28A745" 
                               Margin="0,5,0,0"
                               Text="{Binding RemainingBalance, StringFormat=$ \{0:N2\}}" />
                            </StackPanel>
                        </Border>

                        <!-- Percentage of Salary Spent -->
                        <Border Grid.Row="2" Margin="10" Padding="15" Background="White" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Percentage of Salary Spent" FontSize="16" FontWeight="Bold" Foreground="#555555" />
                                <TextBlock x:Name="PercentageOfSalarySpentTextBlock" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="#DC3545" 
                               Margin="0,5,0,0"
                               Text="{Binding PercentSpent, StringFormat=\{0:P2\}}" />
                            </StackPanel>
                        </Border>

                        <!-- Upcoming Expenses -->
                        <Border Grid.Row="3" Margin="10" Padding="15" Background="White" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Upcoming Expenses" FontSize="16" FontWeight="Bold" Foreground="#555555" />
                                <Grid x:Name="SalaryVsExpensesGraph" Background="#F5F5F5" Height="200" Margin="0,10,0,0">
                                    <dxg:GridControl AutoGenerateColumns="AddNew" EnableSmartColumnsGeneration="True" ItemsSource="{Binding UpcomingExpenses}" Loaded="UpcomingExpensesGridControl_Loaded">
                                        <dxg:GridControl.Resources>
                                            <Style TargetType="dxg:GridColumnHeader">
                                                <Setter Property="Background" Value="#007ACC"/>
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </Style>
                                        </dxg:GridControl.Resources>
                                        <dxg:GridControl.View>
                                            <dxg:TableView AllowHeaderNavigation="True" TotalSummaryPosition="Bottom"/>
                                        </dxg:GridControl.View>
                                    </dxg:GridControl>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Expense Categories Overview -->
                        <Border Grid.Row="4" Margin="10" Padding="15" Background="White" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Expense Categories Overview" FontSize="16" FontWeight="Bold" Foreground="#555555" />
                                <Grid x:Name="ExpenseCategoriesGraph" Background="#F5F5F5" Height="200" Margin="0,10,0,0">
                                    <dxc:ChartControl>
                                        <dxc:ChartControl.Diagram>
                                            <dxc:SimpleDiagram2D>
                                                <dxc:SimpleDiagram2D.Series>
                                                    <dxc:PieSeries2D x:Name="pieSeries" 
                                                         ArgumentDataMember="Key" 
                                                         ValueDataMember="Value" 
                                                         DataSource="{Binding PieData}" />
                                                </dxc:SimpleDiagram2D.Series>
                                            </dxc:SimpleDiagram2D>
                                        </dxc:ChartControl.Diagram>
                                    </dxc:ChartControl>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </TabItem>


            <!-- Expense List Tab -->
            <TabItem Header="Expense List">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Text="Expense List" 
                               Grid.Row="0" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#333333" 
                               Margin="0,0,0,20" />

                    <!-- DataGrid -->
                    <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Background="White" Padding="10">
                        <dxg:GridControl AutoGenerateColumns="AddNew" EnableSmartColumnsGeneration="True" ItemsSource="{Binding ExpensesList}" Loaded="GridControl_Loaded" >
                            <dxg:GridControl.Resources>
                                <Style TargetType="dxg:GridColumnHeader">
                                    <Setter Property="Background" Value="#007ACC"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </dxg:GridControl.Resources>
                            <dxg:GridControl.View>
                                <dxg:TableView AllowHeaderNavigation="True" TotalSummaryPosition="Bottom"/>
                            </dxg:GridControl.View>
                        </dxg:GridControl>
                    </Border>

                    <!-- Add Expense Button -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button Content="Add Expense" 
                                Width="120" 
                                Margin="5" 
                                Padding="10,5" 
                                Background="#28A745" 
                                Foreground="White" 
                                FontWeight="Bold" 
                                Click="AddExpense_Click" />
                        <Button Content="Request Expense"
                                Width="120"
                                Margin="5"
                                Padding="10,5"
                                Background="BlueViolet"
                                Foreground="White"
                                FontWeight="Bold"
                                Click="RequestExpense_Click" />
                        <Button Content="Export to CSV"
                                Width="120"
                                Margin="5"
                                Padding="10,5"
                                Background="#007ACC"
                                Foreground="White"
                                FontWeight="Bold"
                                Click="ExportExpenses_Click" />
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Salary List Tab -->
            <TabItem Header="Salary List">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Text="Salary List" 
                               Grid.Row="0" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#333333" 
                               Margin="0,0,0,20" />

                    <!-- DataGrid -->
                    <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Background="White" Padding="10">
                        <dxg:GridControl AutoGenerateColumns="AddNew" EnableSmartColumnsGeneration="True" ItemsSource="{Binding SalariesList}" Loaded="GridControl_Loaded" >
                            <dxg:GridControl.Resources>
                                <Style TargetType="dxg:GridColumnHeader">
                                    <Setter Property="Background" Value="#007ACC"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </dxg:GridControl.Resources>
                            <dxg:GridControl.View>
                                <dxg:TableView AllowHeaderNavigation="True" TotalSummaryPosition="Bottom"/>
                            </dxg:GridControl.View>
                        </dxg:GridControl>
                    </Border>

                    <!-- Add Salary Button -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button Content="Add Salary" 
                                Width="120" 
                                Margin="5" 
                                Padding="10,5" 
                                Background="#28A745" 
                                Foreground="White" 
                                FontWeight="Bold" 
                                Click="AddSalary_Click" />
                        <Button Content="Export to CSV" 
                                Width="120" 
                                Margin="5" 
                                Padding="10,5" 
                                Background="BlueViolet"  
                                Foreground="White" 
                                FontWeight="Bold" 
                                Click="ExportSalary_Click" />
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>