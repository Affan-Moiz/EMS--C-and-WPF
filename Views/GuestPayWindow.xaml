<Window x:Class="ProjectVersion2.Views.GuestPayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectVersion2.Views"
        mc:Ignorable="d"
        Title="GuestPayWindow" Height="250" Width="800" WindowStartupLocation="CenterScreen" Closing="Window_Closing" >
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                    FontSize="24" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,20" Text="Pay Expense">

                <TextBlock.TextDecorations>
                    <TextDecoration Location="Underline" />
                </TextBlock.TextDecorations>

            </TextBlock>

            <TextBlock x:Name="IdLabel" Text="Id:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="5" FontWeight="Bold" FontSize="14" Foreground="#555555" Visibility="Collapsed"/>
            <TextBox x:Name="IdTextBox" Grid.Row="1" Grid.Column="1" Margin="5" Padding="5" BorderBrush="#E0E0E0" BorderThickness="1" Visibility="Collapsed" />


            <!-- Amount -->
            <TextBlock Text="Amount:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="5" FontWeight="Bold" FontSize="14" Foreground="#555555"/>
            <TextBox x:Name="AmountTextBox" Grid.Row="2" Grid.Column="1" Margin="5" Padding="5" BorderBrush="#E0E0E0" BorderThickness="1" />

           


            <!-- Description -->
            <TextBlock Text="Description:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="5" FontWeight="Bold" FontSize="14" Foreground="#555555"/>
            <TextBox x:Name="DescriptionTextBox" Grid.Row="4" Grid.Column="1" Margin="5" Padding="5" BorderBrush="#E0E0E0" BorderThickness="1" />

          



            <!-- Submit and Cancel Buttons -->
            <StackPanel Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                <Button Content="Submit"
                     x:Name="SubmitButton"
                     Width="100"
                     MaxWidth="150"
                     MaxHeight="75"
                     Margin="5" 
                     Padding="5" 
                     Background="#007ACC" 
                     Foreground="White" 
                     FontWeight="Bold" 
                     Click="SubmitExpense_Click"/>
                <Button Content="Cancel" 
                     Width="100"
                     MaxWidth="150"
                     MaxHeight="75"
                     Margin="5" 
                     Padding="5" 
                     Background="#D9534F" 
                     Foreground="White" 
                     FontWeight="Bold" 
                     Click="Cancel_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
