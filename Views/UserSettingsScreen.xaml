<Window x:Class="ProjectVersion2.Views.UserSettingsScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="User Settings" Height="400" Width="600" WindowStartupLocation="CenterScreen" Background="#F9F9F9">
    <Grid Margin="20">
        <!-- Edit Details Grid -->
        <Grid x:Name="EditDetailsGrid" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                       FontSize="24" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,20">
                Edit Your Details

                <TextBlock.TextDecorations>
                    <TextDecoration Location="Underline" />
                </TextBlock.TextDecorations>
            </TextBlock>

            <!-- Username -->
            <TextBlock Text="Username:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="5" FontWeight="Bold" FontSize="14" Foreground="#555555"/>
            <TextBox x:Name="UsernameTextBox" Grid.Row="1" Grid.Column="1" Margin="5" Padding="5" BorderBrush="#E0E0E0" BorderThickness="1" />

            <!-- Email -->
            <TextBlock Text="Email:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="5" FontWeight="Bold" FontSize="14" Foreground="#555555"/>
            <TextBox x:Name="EmailTextBox" Grid.Row="2" Grid.Column="1" Margin="5" Padding="5" BorderBrush="#E0E0E0" BorderThickness="1" />

            <!-- Role (Read-Only) -->
            <TextBlock Text="Role:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="5" FontWeight="Bold" FontSize="14" Foreground="#555555"/>
            <TextBox x:Name="RoleTextBox" Grid.Row="4" Grid.Column="1" Margin="5" Padding="5" BorderBrush="#E0E0E0" BorderThickness="1" IsReadOnly="True" Background="#E0E0E0" />

            <!-- IsApproved (Read-Only) -->
            <TextBlock Text="Approval Status:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Margin="5" FontWeight="Bold" FontSize="14" Foreground="#555555"/>
            <TextBox x:Name="IsApprovedTextBox" Grid.Row="5" Grid.Column="1" Margin="5" Padding="5" BorderBrush="#E0E0E0" BorderThickness="1" IsReadOnly="True" Background="#E0E0E0" />

            <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="Update Password" 
                    Grid.Row="6" Grid.Column="0"
                    Width="120" Height="30" 
                    Margin="10"  HorizontalAlignment="Left"
                    Background="#007ACC" Foreground="White" FontWeight="Bold" 
                    Click="UpdatePasswordButton_Click" />
                <Button Content="Budget" 
                    Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                    Width="90" Height="31" 
                    Margin="10"  HorizontalAlignment="Left"
                    Background="#007ACC" Foreground="White" FontWeight="Bold" 
                    Click="UpdatePasswordButton_Click" />
            </StackPanel>

                <!-- Update Password Button -->
            

            <!-- Save and Cancel Buttons -->
            <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save Changes" 
                        Width="100"
                        MaxWidth="150"
                        MaxHeight="75"
                        Margin="5" 
                        Padding="5" 
                        Background="#007ACC" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        Click="SaveButton_Click"/>
                <Button Content="Cancel" 
                        Width="100"
                        MaxWidth="150"
                        MaxHeight="75"
                        Margin="5" 
                        Padding="5" 
                        Background="#D9534F" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        Click="Cancel_Click"/>
            </StackPanel>
        </Grid>

        <!-- Password Update Grid -->
        <Grid x:Name="PasswordUpdateGrid" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!-- Current Password -->
            <TextBlock Text="Current Password:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="5" FontWeight="Bold" FontSize="14" Foreground="#555555"/>
            <PasswordBox x:Name="CurrentPasswordBox" Grid.Row="0" Grid.Column="1" Margin="5" Padding="5" BorderBrush="#E0E0E0" BorderThickness="1" />

            <!-- Updated Password -->
            <TextBlock Text="Updated Password:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="5" FontWeight="Bold" FontSize="14" Foreground="#555555"/>
            <PasswordBox x:Name="UpdatedPasswordBox" Grid.Row="1" Grid.Column="1" Margin="5" Padding="5" BorderBrush="#E0E0E0" BorderThickness="1" />

            <!-- Save and Back Buttons -->
            <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save Password" 
                        Width="120"
                        Margin="5" 
                        Padding="5" 
                        Background="#28A745" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        Click="SavePasswordButton_Click"/>
                <Button Content="Back to Edit Details" 
                        Width="150"
                        Margin="5" 
                        Padding="5" 
                        Background="#D9534F" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        Click="BackToEditDetailsButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
