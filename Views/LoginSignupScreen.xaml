<Window x:Class="ProjectVersion2.Views.LoginSignupScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Login and Sign Up" Height="Auto" Width="500" WindowStartupLocation="CenterScreen" Background="#F9F9F9">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" x:Name="HeaderTextBlock" Text="Login" 
                   FontSize="28" FontWeight="Bold" Foreground="#333333" 
                   HorizontalAlignment="Center" Margin="0,0,0,20" />

        <!-- Login Form -->
        <Border x:Name="LoginForm" Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Background="White" Padding="20">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,10">
                <Label Content="Username:" FontWeight="Bold" Foreground="#555555" />
                <TextBox Name="LoginUsernameTextBox" Width="300" Height="30" Margin="0,5,0,15" Padding="5" BorderBrush="#CCCCCC" BorderThickness="1" />
                <Label Content="Password:" FontWeight="Bold" Foreground="#555555" />
                <PasswordBox Name="LoginPasswordBox" Width="300" Height="30" Margin="0,5,0,0" Padding="5" BorderBrush="#CCCCCC" BorderThickness="1" />
            </StackPanel>
        </Border>

        <!-- Sign Up Form -->
        <Border x:Name="SignupForm" Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Background="White" Padding="20" Visibility="Collapsed">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,10">
                <Label Content="Username:" FontWeight="Bold" Foreground="#555555" />
                <TextBox x:Name="SignupUsernameTextBox" Width="300" Height="30" Margin="0,5,0,15" Padding="5" BorderBrush="#CCCCCC" BorderThickness="1" />
                <Label Content="Email:" FontWeight="Bold" Foreground="#555555" />
                <TextBox x:Name="SignupEmailTextBox" Width="300" Height="30" Margin="0,5,0,15" Padding="5" BorderBrush="#CCCCCC" BorderThickness="1" />
                <Label Content="Password:" FontWeight="Bold" Foreground="#555555" />
                <PasswordBox x:Name="SignupPasswordBox" Width="300" Height="30" Margin="0,5,0,15" Padding="5" BorderBrush="#CCCCCC" BorderThickness="1" />
                <Label Content="Role:" FontWeight="Bold" Foreground="#555555" />
                <ComboBox x:Name="SignupRoleComboBox" Width="300" Height="30" Margin="0,5,0,0" Padding="5" BorderBrush="#CCCCCC" BorderThickness="1">
                    <ComboBoxItem Content="User" />
                    <ComboBoxItem Content="Admin" />
                </ComboBox>
            </StackPanel>
        </Border>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <!-- Login Buttons -->
            <StackPanel x:Name="LoginButtons" Orientation="Horizontal" Visibility="Visible">
                <Button Content="Login" 
                        Width="120" Height="35" 
                        Margin="5" Padding="10,5" 
                        Background="#007ACC" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        Click="Login_Click" 
                        IsDefault="True"/>
                <Button Content="Sign Up" 
                        Width="120" Height="35" 
                        Margin="5" Padding="10,5" 
                        Background="#D9534F" Foreground="White" 
                        FontWeight="Bold" Click="ShowSignupForm_Click" />
            </StackPanel>

            <!-- Sign Up Buttons -->
            <StackPanel x:Name="SignupButtons" Orientation="Horizontal" Visibility="Collapsed">
                <Button Content="Sign Up" 
                        Width="120" Height="35" 
                        Margin="5" Padding="10,5" 
                        Background="#007ACC" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        Click="Signup_Click"
                        IsDefault="True"/>
                <Button Content="Cancel" 
                        Width="120" Height="35" 
                        Margin="5" Padding="10,5" 
                        Background="#D9534F" Foreground="White" 
                        FontWeight="Bold" Click="ShowLoginForm_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
