<Window x:Class="ProjectVersion2.Views.MonthlyYearlyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectVersion2.Views"
        mc:Ignorable="d"
        Title="Monthly or Yearly" Height="350" Width="450" WindowStartupLocation="CenterScreen" Background="#F9F9F9">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Select an Option" 
                   FontSize="26" 
                   FontWeight="Bold" 
                   Foreground="#333333" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20" />

        <!-- Options Section -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1" Padding="20" Margin="0,10,0,10">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <RadioButton x:Name="MonthlyOption" 
                             Content="Monthly" 
                             FontSize="18" 
                             FontWeight="Bold" 
                             Foreground="#007ACC" 
                             GroupName="Options" 
                             HorizontalAlignment="Center" />
                <RadioButton x:Name="YearlyOption" 
                             Content="Yearly " 
                             FontSize="18" 
                             FontWeight="Bold" 
                             Foreground="#007ACC" 
                             GroupName="Options" 
                             HorizontalAlignment="Center" />
                <RadioButton x:Name="TotalOption" 
                             Content="Total " 
                             FontSize="18" 
                             FontWeight="Bold" 
                             Foreground="#007ACC" 
                             GroupName="Options" 
                             HorizontalAlignment="Center" />
            </StackPanel>
        </Border>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom"  >
            <Button Content="Confirm" 
                    Width="120" 
                    Height="40" 
                    Background="#28A745" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    Margin="0,20,20,20"
                    Click="Confirm_Click" />
            <Button Content="Cancel" 
                    Width="120" 
                    Height="40" 
                    Background="#D9534F" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    Margin="20,20,0,20"
                    Click="Cancel_Click" />
        </StackPanel>
    </Grid>
</Window>
