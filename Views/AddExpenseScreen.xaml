<Window x:Class="ProjectVersion2.Views.AddExpenseScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Add Expense" SizeToContent="Height" Width="600" WindowStartupLocation="CenterScreen" Background="#F9F9F9">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                       FontSize="24" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,20">
               Add Expense

                <TextBlock.TextDecorations>
                    <TextDecoration Location="Underline" />
                </TextBlock.TextDecorations>

            </TextBlock>

            <TextBlock x:Name="IdLabel" Text="Id:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="5" FontWeight="Bold" FontSize="14" Foreground="#555555" Visibility="Collapsed"/>
            <TextBox x:Name="IdTextBox" Grid.Row="1" Grid.Column="1" Margin="5" Padding="5" BorderBrush="#E0E0E0" BorderThickness="1" Visibility="Collapsed" />


            <!-- Amount -->
            <TextBlock Text="Amount:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="5" FontWeight="Bold" FontSize="14" Foreground="#555555"/>
            <TextBox x:Name="AmountTextBox" Grid.Row="2" Grid.Column="1" Margin="5" Padding="5" BorderBrush="#E0E0E0" BorderThickness="1" />

            <!-- Category -->
            <TextBlock Text="Category:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="5" FontWeight="Bold" FontSize="14" Foreground="#555555"/>
            <StackPanel Grid.Row="3" Grid.Column="1" Margin="5">
                <ComboBox x:Name="CategoryComboBox" Margin="5" Padding="5" BorderBrush="#E0E0E0" BorderThickness="1" 
           ItemsSource="{Binding Path=Categories}"
                          SelectionChanged="CategoryComboBox_SelectionChanged"/>
                <TextBox x:Name="NewExpenseCategoryTextBox" Margin="5" Padding="5" BorderBrush="#E0E0E0" BorderThickness="1" Visibility="Collapsed" />
            </StackPanel>


            <!-- Description -->
            <TextBlock Text="Description:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="5" FontWeight="Bold" FontSize="14" Foreground="#555555"/>
            <TextBox x:Name="DescriptionTextBox" Grid.Row="4" Grid.Column="1" Margin="5" Padding="5" BorderBrush="#E0E0E0" BorderThickness="1" />

            <!-- Payment Method -->
            <TextBlock Text="Payment Method:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Margin="5" FontWeight="Bold" FontSize="14" Foreground="#555555"/>
            <ComboBox x:Name="PaymentMethodComboBox" Grid.Row="5" Grid.Column="1" Margin="5" Padding="5" BorderBrush="#E0E0E0" BorderThickness="1" 
                      ItemsSource="{Binding Path=PaymentMethods}" 
                      />


            <!-- Payees -->
            <TextBlock x:Name="PayeesLabel" Text="Payees:" Grid.Row="6" Grid.Column="0" VerticalAlignment="Top" Margin="5" FontWeight="Bold" FontSize="14" Foreground="#555555" Visibility="Collapsed"/>
            <StackPanel x:Name="PayeeStackPanel" Grid.Row="6" Grid.Column="1" Margin="5" Orientation="Vertical" Visibility="Collapsed">
                <!-- ComboBox to select payees -->
                <ComboBox x:Name="PayeeComboBox"
              ItemsSource="{Binding Path=AvailableUsernames}"
              SelectionChanged="PayeeComboBox_SelectionChanged"
               />

                <!-- ListBox to show selected payees with delete button -->
                <ListBox x:Name="SelectedPayeesListBox" Margin="0,5,0,0" MinHeight="25" SelectionChanged="SelectedPayeesListBox_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="{Binding}" VerticalAlignment="Center"  Margin="0,0,5,0" />
                                
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Button x:Name="DeletePayeeButton" Content="Delete" Width="60" Height="28" Margin="0,5,0,0" Padding="5" Background="#D9534F" Foreground="White" FontWeight="Bold" Click="DeletePayee_Click" HorizontalAlignment="Right" IsEnabled="False"/>
            </StackPanel>


            <!-- Recurring Expense -->
            <CheckBox x:Name="RecurringCheckBox" Content="Recurring Expense" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" FontWeight="Bold" FontSize="14" Foreground="#555555" Checked="RecurringCheckBox_Checked" Unchecked="RecurringCheckBox_Unchecked"/>

            <!-- Submit and Cancel Buttons -->
            <StackPanel Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                <Button Content="Submit"
                        x:Name="SubmitButton"
                        Width="100"
                        MaxWidth="150"
                        MaxHeight="75"
                        Margin="5" 
                        Padding="5" 
                        Background="#007ACC" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        Click="SubmitExpense_Click"/>
                <Button Content="Cancel" 
                        Width="100"
                        MaxWidth="150"
                        MaxHeight="75"
                        Margin="5" 
                        Padding="5" 
                        Background="#D9534F" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        Click="Cancel_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
